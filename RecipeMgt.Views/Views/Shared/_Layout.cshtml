@inject IHttpContextAccessor HttpContextAccessor
@{
    var token = HttpContextAccessor.HttpContext?.Session.GetString("JwtToken");
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CookPad</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-light">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-warning mx-auto" asp-controller="Home" asp-action="Index">
                üç≥ CookPad
            </a>
            <form method="get"
                  asp-controller="Recipe"
                  asp-action="Search"
                  class="d-none d-lg-flex mx-auto"
                  style="max-width:500px;width:100%;">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text"
                           name="query"
                           class="form-control border-start-0"
                           placeholder="T√¨m m√≥n ƒÉn, nguy√™n li·ªáu..." />
                </div>
            </form>

            <div class="ms-auto d-flex align-items-center gap-3">

                @if (!string.IsNullOrEmpty(token))
                {
                    <div class="dropdown">
                        <button class="btn p-0 border-0 bg-transparent d-flex align-items-center"
                                data-bs-toggle="dropdown">
                            <img src="~/images/avatar-default.png"
                                 class="rounded-circle"
                                 style="width:36px;height:36px" />
                            <i class="bi bi-chevron-down ms-2 text-muted"></i>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                            <li class="px-3 py-2">
                                <div class="fw-semibold">@userName</div>
                                <small class="text-muted">Welcome back üëã</small>
                            </li>
                            <li><hr class="dropdown-divider" /></li>

                            <li>
                                <a class="dropdown-item" asp-controller="Recipe" asp-action="Index">
                                    <i class="bi bi-journal-bookmark me-2"></i> My Recipes
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Bookmark" asp-action="Index">
                                    <i class="bi bi-bookmark me-2"></i> Bookmarks
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Following" asp-action="Index">
                                    <i class="bi bi-people me-2"></i> Following
                                </a>
                            </li>

                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn btn-outline-secondary" asp-controller="Auth" asp-action="Login">
                        ƒêƒÉng nh·∫≠p
                    </a>
                }
            </div>
        </div>
    </nav>

    <!-- MAIN -->
    <main class="container-fluid px-0">
        @RenderBody()
    </main>

    <footer class="bg-white border-top py-3 text-center text-muted small">
        ¬© 2026 CookPad
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
    @RenderSection("Styles", false)

</body>
</html>
