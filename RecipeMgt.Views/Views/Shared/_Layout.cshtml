@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
}
@{
    var token = HttpContextAccessor.HttpContext?.Session.GetString("JwtToken");
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecipeMgt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)

    <style>
        body {
            min-height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            font-family: 'Segoe UI', Roboto, sans-serif;
            background-color: #f9fafb;
        }

        .wrapper {
            display: flex;
            flex: 1;
        }

        /* === SIDEBAR (Modern Light Theme) === */
        .sidebar {
            width: 240px;
            background-color: #ffffff;
            border-right: 1px solid #e5e7eb;
            min-height: 100vh;
            position: fixed;
            transition: width 0.3s ease;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
            z-index: 100;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar .brand {
            font-size: 1.2rem;
            font-weight: 600;
            padding: 20px;
            border-bottom: 1px solid #e5e7eb;
            color: #374151;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .sidebar nav a {
            color: #374151;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 12px 20px;
            border-radius: 8px;
            margin: 4px 12px;
            transition: all 0.2s ease-in-out;
            font-weight: 500;
        }

        .sidebar nav a:hover {
            background-color: #f3f4f6;
        }

        .sidebar nav a.active {
            background-color: #e0f2fe;
            color: #0ea5e9;
            font-weight: 600;
        }

        .sidebar i {
            margin-right: 10px;
            font-size: 1.1rem;
        }

        .sidebar.collapsed a span {
            display: none;
        }

        .sidebar.collapsed .brand span {
            display: none;
        }

        /* === MAIN CONTENT === */
        .main {
            margin-left: 240px;
            flex: 1;
            padding: 20px;
            background-color: #f9fafb;
            transition: margin-left 0.3s ease;
        }

        .main.collapsed {
            margin-left: 70px;
        }

        /* === NAVBAR === */
        .navbar-custom {
            background-color: #ffffff;
            border-bottom: 1px solid #e5e7eb;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
        }

        footer {
            background: #ffffff;
            border-top: 1px solid #e5e7eb;
            padding: 10px 20px;
            text-align: center;
            font-size: 0.9rem;
            color: #6b7280;
        }

        .dropdown-menu {
            border-radius: 12px !important;
            padding: 0.5rem !important;
            animation: fadeIn 0.15s ease-in-out;
        }

        .dropdown-item {
            border-radius: 8px;
            transition: background 0.15s;
        }

        .dropdown-item:hover {
            background-color: #f3f4f6;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-5px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* === Responsive === */
        @@media (max-width: 768px) {
            .sidebar {
                position: fixed;
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .main {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="brand">
                <span>Cooking Book</span>
                <button class="btn btn-sm btn-outline-secondary d-none d-md-inline" id="toggleSidebar">
                    ‚ò∞
                </button>
            </div>
            <nav>
                <a asp-controller="Home" asp-action="Index" class="active">üè†<span>Dashboard</span></a>
                @if (!string.IsNullOrEmpty(token))
                {
                    <a asp-controller="Recipe" asp-action="Index">üìñ<span>My Recipes</span></a>
                    <a asp-controller="Bookmark" asp-action="Index">üîñ<span>Bookmarks</span></a>
                    <a asp-controller="Following" asp-action="Index">üë•<span>Following</span></a>
                }
                
            </nav>
        </div>

        <!-- Main -->
        <div class="main" id="main">
            <nav class="navbar navbar-expand navbar-custom mb-3">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <!-- N√∫t toggle sidebar -->
                    <div class="d-flex align-items-center">
                        <button class="btn btn-outline-secondary d-md-none me-2" id="mobileToggle">
                            ‚ò∞
                        </button>
                        <span class="fw-semibold ms-1 text-secondary">Cooking Book</span>
                    </div>

                    <!-- Dropdown user n·∫±m b√™n ph·∫£i -->
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(token))
                        {
                            <div class="dropdown">
                                <button class="btn border-0 p-0 bg-transparent d-flex align-items-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="fw-semibold text-dark d-none d-md-inline me-2">@userName</span>
                                    <img src="~/images/avatar-default.png" class="rounded-circle shadow-sm" style="width: 36px; height: 36px;" />
                                    <i class="ms-1 bi bi-chevron-down text-secondary"></i>
                                </button>

                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 p-2" style="min-width: 220px;">
                                    <li class="px-3 pb-2 border-bottom">
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/avatar-default.png" class="rounded-circle me-2" style="width: 40px; height: 40px;" />
                                            <div>
                                                <div class="fw-semibold">@userName</div>
                                                <small class="text-muted">user@example.com</small>
                                            </div>
                                        </div>
                                    </li>
                                    <li><a class="dropdown-item py-2 d-flex align-items-center" asp-controller="Profile" asp-action="Index"><i class="bi bi-person me-2"></i> H·ªì s∆°</a></li>
                                    <li><a class="dropdown-item py-2 d-flex align-items-center" asp-controller="Settings" asp-action="Index"><i class="bi bi-gear me-2"></i> C√†i ƒë·∫∑t</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item py-2 d-flex align-items-center text-danger" asp-controller="Auth" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> ƒêƒÉng xu·∫•t</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm" asp-controller="Auth" asp-action="Login"> ƒêƒÉng nh·∫≠p</a>
                        }
                    </div>
                </div>
            </nav>

            <main role="main">
                @RenderBody()
            </main>

            <footer>
                &copy; 2025 - RecipeMgt User Dashboard
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById("sidebar");
        const main = document.getElementById("main");
        const toggleSidebar = document.getElementById("toggleSidebar");
        const mobileToggle = document.getElementById("mobileToggle");

        toggleSidebar?.addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
            main.classList.toggle("collapsed");
        });

        mobileToggle?.addEventListener("click", () => {
            sidebar.classList.toggle("show");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
